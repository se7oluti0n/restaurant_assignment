<%= form_for(review) do |f| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="field col-md-6 form-group">
    <%= f.label 'Name', class: "control-label" %>
    <%= f.text_field :user, class: "form-control" %>
  </div>

  <div class="field col-md-6 form-group">
    <%= f.label 'Rate', class: "control-label" %>
    <%= f.number_field :star, max: 5, min: 1, class: "form-control"   %>
  </div>
</div>
  <div class="field row form-group">
    <%= f.label :comment, class: "control-label col-md-2" %>
    <%= f.text_area :comment, class: "form-control col-md-8" %>
  </div>

  <%= f.hidden_field :food_item_id, value: review.food_item_id %>
  <div class="actions form-group">
    <%= f.submit class: "btn btn-success green" %>
  </div>
<% end %>
